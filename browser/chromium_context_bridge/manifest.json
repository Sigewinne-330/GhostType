{
  "manifest_version": 3,
  "name": "GhostType Context Bridge",
  "version": "0.1.0",
  "key": "",
  "description": "Push active tab domain to GhostType via Native Messaging.",
  "permissions": [
    "tabs",
    "nativeMessaging",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "GhostType Context Bridge"
  },
  "commands": {
    "push-context": {
      "suggested_key": {
        "default": "Alt+Shift+G",
        "mac": "Alt+Shift+G"
      },
      "description": "Push active tab context to GhostType"
    }
  }
}
